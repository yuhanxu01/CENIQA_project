{
  "experiment_name": "gmm_high_res_stl10",
  "seed": 42,
  "device": "cuda",

  "data": {
    "batch_size": 64,
    "num_workers": 4,
    "train_samples": 5000,
    "val_samples": 1000
  },

  "model": {
    "backbone": "resnet18",
    "feature_dim": 512,
    "n_clusters": 8,
    "hidden_dim": 512,
    "dropout": 0.3,
    "freeze_backbone": false
  },

  "training": {
    "epochs": 50,
    "learning_rate": 0.0001,
    "weight_decay": 1e-5,
    "scheduler": "reduce_on_plateau",
    "scheduler_params": {
      "mode": "max",
      "factor": 0.5,
      "patience": 5,
      "verbose": true
    }
  },

  "loss_weights": {
    "cluster_loss": 0.1
  },

  "logging": {
    "save_dir": "./experiments",
    "save_best": true,
    "save_last": true
  }
}
